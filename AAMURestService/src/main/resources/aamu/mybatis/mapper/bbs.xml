<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="aamu.mybatis.mapper.bbs">

	<!-- 글 목록용 -->
	<select id="bbsSelectList" resultType="bbsDTO" parameterType="Map">
		SELECT rbbs.*, r.* FROM routebbs rbbs 
		JOIN routeboard rb ON rbbs.rbn = rb.rbn 
		JOIN route r ON rb.rbn = r.rbn
	</select>
	
	<!-- 글 목록용_사진 뿌려주기 -->
	<select id="bbsSelectPhotoList" parameterType="int" resultType="String">
		SELECT photo FROM routebbsphoto WHERE rbn=#{rbn}
	</select>
	
	<!-- 글 하나 선택 -->
	<select id="bbsSelectOne" resultType="BBSDTO" parameterType="String">
		SELECT rbbs.*,rr.*,t.* FROM routebbs rbbs
		JOIN routebbs rbbs ON rb.rbn=rbbs.rbn
		JOIN routeboard rb ON rbbs.rbn=rb.rbn
		WHERE rbbs.rbn=#{rbn}
	</select>
	
	<!-- 글 등록 -->
	<insert id="bbsInsert" parameterType="map">
		INSERT INTO routebbs VALUES (#{rbn},#{title},SYSDATE,#{content},#{themeid},#{rateavg},#{id})
	<selectKey keyProperty="rbn" resultType="int" order="AFTER">
    	SELECT #{rbn} FROM DUAL
    </selectKey>
	</insert>
	
	<!-- 글 생성용_사진 저장 -->
	<insert id="photoInsert" parameterType="map" >
		INSERT INTO routebbsphoto VALUES (#{rbn},#{photo})
	</insert>
	
	<!-- 글 수정 -->
	<update id="bbsUpdate" parameterType="map">
		UPDATE routebbs SET title=#{title},content=#{content} WHERE rbn=#{rbn}
	 </update>
	 
	 <!-- 글 삭제 -->
	 <delete id="bbsDelete" parameterType="map">
	 	DELETE FROM routebbs WHERE rbn=#{rbn}
	 </delete>
	 
	 <!--                            리뷰                              -->
	 <!-- 리뷰 목록 -->
	 <select id="reviewList" parameterType="map" resultType="ReviewDTO" >
		SELECT * FROM ratereview WHERE rbn=#{rbn}
	</select>
	 <!-- 리뷰 등록 -->
	 <insert id="reviewInsert" parameterType="map">
	 	INSERT INTO ratereview VALUES (#{rbn},1,1,#{review},SYSDATE,1)
	 </insert>
	 
	 <!-- 리뷰 수정 -->
	 <update id="reviewUpdate" parameterType="map">
	 	UPDATE ratereview SET rate=#{rate},review=#{review} WHERE rbn=#{rbn}
	 </update>
	 
	 <!-- 리뷰 삭제 -->
	 <delete id="reviewDelete" parameterType="map">
	 	DELETE FROM ratereview WHERE rno=#{rno}
	 </delete>
	 
	<!-- 평점 평균 반영 -->
	<update id="rateUpdate">
		UPDATE routebbs SET rateavg =#{rateavg} WHERE rbn=#{rbn}
	</update>
		
</mapper>