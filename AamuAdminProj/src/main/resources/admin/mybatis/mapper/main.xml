<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="admin.mybatis.mapper.user">
	<select id="usersTotalCount" resultType="int">
		SELECT COUNT(*) FROM users
	</select>
	
	<select id="usersTodayCount" parameterType="Date" resultType="int">
		SELECT COUNT(*) FROM users WHERE joindate=TO_DATE(#{today},'YY-MM-DD')
	</select>
	
</mapper>